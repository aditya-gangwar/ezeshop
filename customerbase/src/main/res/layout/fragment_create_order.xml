                                        android:layout_width="@dimen/normal_icon_width"
                                        android:layout_height="@dimen/normal_icon_height"
                                        android:layout_gravity="top|right"
                                        android:padding="0dp"
                                        android:src="@drawable/my_clear_32" />
                                </FrameLayout>

                                <FrameLayout
