                    android:tint="@color/primary"
                    android:visibility="invisible"
                    android:layout_marginRight="@dimen/medium_space"/>

                <EditText
                    android:id="@+id/input_card_num"
                    style="@style/MyEdittext_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:maxLength="@string/card_number_limit"
                    android:gravity="center"
                    android:inputType="number"/>
            </LinearLayout>

        </LinearLayout>

        <EditText
            style="@style/Edittext_only_view_small"
            android:id="@+id/label_or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="OR"
            android:layout_marginTop="@dimen/small_space"
            android:layout_marginBottom="@dimen/small_space"/-->

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock_outline_white_24dp"
                android:tint="@color/primary"
                android:layout_marginRight="@dimen/medium_space"/>

            <EditText
                android:id="@+id/input_pin"
                style="@style/MyEdittext_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:hint="Current PIN"
                android:maxLength="@string/pin_char_limit"
                android:gravity="center"
                android:imeOptions="actionDone"/>
        </LinearLayout>

