<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/LL_Vertical_paddingSidesLarge"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="?android:attr/windowBackground">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

        <EditText
            style="@style/Edittext_only_view_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_info1"
            android:textStyle="bold"
            android:textColor="@color/accent2"
            android:text="Account Disabled"
            android:layout_marginBottom="@dimen/large_space"/>

        <EditText
            style="@style/Edittext_only_view_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_info3"
            android:textStyle="italic"
            android:text="Enable account ?  Enter OTP as received on your registered mobile number."
            android:layout_marginBottom="@dimen/medium_space"/>

        <LinearLayout
            style="@style/LL_Horizontal_wrap"
            android:id="@+id/layout_otp"
            android:layout_marginBottom="@dimen/XL_space">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/image_otp"
                android:src="@drawable/ic_security_white_24dp"
                android:tint="@color/primary"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/medium_space"/>

            <EditText
                android:id="@+id/input_otp"
                style="@style/MyEdittext_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter OTP"
                android:maxLength="@string/otp_char_limit"
                android:gravity="center"/>
        </LinearLayout>

        <EditText
            style="@style/Edittext_only_view_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/label_info2"
            android:textStyle="italic"
            android:text="No OTP ?\nTo Generate, provide your 'PIN'"
            android:layout_marginBottom="@dimen/XL_space"/>
        <!--LinearLayout
            android:layout_width="match_parent"
