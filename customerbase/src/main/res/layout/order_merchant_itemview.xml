<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LL_Vertical"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/layout_mchntItemView"
    android:foreground="?android:attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_mchntItemView"
        style="@style/My_Cardview"
        android:clickable="false"
        android:focusable="false">

        <LinearLayout style="@style/LL_Vertical">

            <LinearLayout
                style="@style/LL_Horizontal_wrap"
                android:paddingLeft="@dimen/medium_space"
                android:paddingRight="@dimen/medium_space">

                <TextView
                    android:id="@+id/cardTitle_mchntName"
                    style="@style/Edittext_CardTitle"
                    android:text="Ganga Stores and Cosmetics" />

                <TextView
                    android:id="@+id/cardBtn_details"
                    style="@style/Edittext_CardTitle_Button"
                    android:text="DETAILS" />
                <!--ImageView
                    style="@style/Img_CardTitle_Button"/-->
            </LinearLayout>

            <View style="@style/Divider_horizontal_Medium" />

            <LinearLayout
                style="@style/LL_Horizontal_wrap"
                android:layout_marginLeft="@dimen/medium_space"
                android:layout_marginRight="@dimen/medium_space"
                android:layout_marginTop="@dimen/small_space"
                android:clickable="false"
                android:focusable="false">

                <LinearLayout
                    style="@style/LL_Vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <LinearLayout style="@style/LL_Horizontal_wrap">

                        <ImageView
                            android:id="@+id/img_merchant"
                            android:layout_width="@dimen/dp_item_image_width"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/large_space"
                            android:layout_marginTop="@dimen/small_space"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_store_grey_48dp" />

                        <LinearLayout
                            style="@style/LL_Vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false">

                            <TextView
                                android:id="@+id/input_mchntAddress"
                                style="@style/Edittext_only_view_small_lessPad"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="Krishna Plaza, Indirapuram"
                                android:textColor="@color/secondary_text" />

                            <LinearLayout
                                style="@style/LL_Horizontal_wrap"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Edittext_only_view_XS_lessPad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Account Balance : "
                                    android:textColor="@color/secondary_text" />

                                <TextView
                                    android:id="@+id/input_accBalance"
                                    style="@style/Edittext_only_view_XS_lessPad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:text="+ \u20B9 500"
                                    android:textColor="@color/green_positive" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/LL_Horizontal_wrap"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Edittext_only_view_XS_lessPad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cashback : "
                                    android:textColor="@color/secondary_text" />

                                <TextView
                                    android:id="@+id/input_cbRate"
                                    style="@style/Edittext_only_view_XS_lessPad"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="0dp"
                                    android:text="\@12\%"
                                    android:textColor="@color/green_positive" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/input_delChargeInfo"
                        style="@style/Edittext_only_view_XS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        android:text="@string/deliveryChargeInfo"
                        android:paddingLeft="0dp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:tint="@color/icon_grey" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

