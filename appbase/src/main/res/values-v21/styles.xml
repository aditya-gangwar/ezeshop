<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Label" >
        <attr name="android:windowBackground" />
        <attr name="android:textColorPrimary" />
        <attr name="android:textColorHint" />
    </declare-styleable>

    <style name="MyTheme" parent="MyTheme_v16">
        <!-- same as 'text color hint'-->
        <!--item name="android:colorControlNormal">@color/iron</item-->
    </style>

    <style name="Edittext_biggest_main_input" parent="Edittext_only_click_large">
        <item name="android:textSize">@dimen/text_size_XXXXL</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="My_Cardview">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="card_view:cardCornerRadius">4dp</item>
        <item name="android:layout_marginTop">@dimen/large_space</item>
        <item name="android:elevation">3dp</item>
    </style>


</resources>