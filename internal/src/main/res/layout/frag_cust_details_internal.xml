                android:visibility="invisible"/>
            <EditText
                style="@style/Edittext_only_view_small_lessPad"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Customer ID"
                android:layout_weight="40"
                android:gravity="left"/>
