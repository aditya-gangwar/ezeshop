                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBS"
                android:layout_weight="60"
                android:gravity="left"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

