<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/LL_Vertical_paddingSidesLarge">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_store_white_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Merchant ID"
                android:layout_weight="45"
                android:gravity="left"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_merchant_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBS"
                android:layout_weight="55"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_perm_identity_white_24dp"
                android:visibility="invisible"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Store Name"
                android:layout_weight="45"
                android:gravity="left|bottom"
                android:layout_gravity="bottom"
                android:paddingTop="0dp"/>

            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_store_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBS"
                android:layout_weight="55"
                android:gravity="left"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingTop="0dp"/>
        </LinearLayout>
        <LinearLayout
            style="@style/LL_Vertical">

            <LinearLayout
                style="@style/LL_Horizontal_wrap"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_perm_identity_white_24dp"
                    android:visibility="invisible"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Category"
                    android:layout_weight="45"
                    android:gravity="left|bottom"
                    android:layout_gravity="bottom"
                    android:paddingTop="0dp"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_weight="55"
                    android:gravity="left"
                    android:id="@+id/input_store_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TBS"
                    android:paddingTop="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_android_white_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Registered Mobile"
                android:layout_weight="45"
                android:gravity="left"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_merchant_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBS"
                android:layout_weight="55"
                android:gravity="left"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap"
            android:id="@+id/layout_cust_created_on">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_android_white_24dp"
                android:tint="@color/primary"
                android:visibility="invisible"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Registered on"
                android:layout_weight="45"
                android:gravity="left"
                android:paddingTop="0dp"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_registered_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TBS - 22 July 16"
                android:layout_weight="55"
                android:gravity="left"
                android:paddingTop="0dp"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap"
            android:visibility="visible">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_input_white_24dp"
                android:visibility="invisible"
                android:paddingTop="0dp"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="First Login Ok"
                android:layout_weight="45"
                android:gravity="left|bottom"
                android:layout_gravity="bottom"
                android:paddingTop="0dp"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_weight="55"
                android:gravity="left"
                android:id="@+id/input_first_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingTop="0dp"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

        <LinearLayout
            style="@style/LL_Horizontal_wrap"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_input_white_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Status"
                android:layout_weight="45"
                android:gravity="left|bottom"
                android:layout_gravity="bottom"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_weight="55"
                android:gravity="left"
                android:id="@+id/input_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/green_positive"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Vertical"
            android:id="@+id/layout_status_details">
            <LinearLayout
                style="@style/LL_Horizontal_wrap"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_input_white_24dp"
                    android:visibility="invisible"
                    android:paddingTop="0dp"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Changed On"
                    android:layout_weight="45"
                    android:gravity="left|bottom"
                    android:layout_gravity="bottom"
                    android:paddingTop="0dp"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_weight="55"
                    android:gravity="left"
                    android:id="@+id/input_status_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22 July 16, 23:00"
                    android:paddingTop="0dp"/>
            </LinearLayout>
            <LinearLayout
                style="@style/LL_Horizontal_wrap"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_input_white_24dp"
                    android:visibility="invisible"
                    android:paddingTop="0dp"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Reason"
                    android:layout_weight="45"
                    android:gravity="left|bottom"
                    android:layout_gravity="top"
                    android:paddingTop="0dp"/>
                <EditText
                    style="@style/Edittext_only_view_small"
                    android:layout_weight="55"
                    android:gravity="left"
                    android:id="@+id/input_status_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingTop="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_perm_identity_white_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Contact Name"
                android:layout_weight="45"
                android:gravity="left|center_vertical"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_contact_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TBS"
                android:layout_weight="55"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_contact_phone_black_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Contact Phone"
                android:layout_weight="45"
                android:gravity="left|center_vertical"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:id="@+id/input_contact_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TBS"
                android:layout_weight="55"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email_white_24dp"
