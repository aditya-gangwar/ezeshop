        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_space"/>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@color/primary"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Cashback Rate"
                android:layout_weight="45"
                android:gravity="left|center_vertical"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_weight="55"
                android:gravity="left|center_vertical"
                android:id="@+id/input_cbrate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="TBS"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_settings_black_24dp"
                android:tint="@color/primary"
                android:paddingTop="0dp"
                android:visibility="invisible"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Add Cash"
                android:layout_weight="45"
                android:paddingTop="0dp"
                android:gravity="left|center_vertical"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_weight="55"
                android:gravity="left|center_vertical"
                android:id="@+id/input_addcash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="0dp"
                android:text="TBS"/>
        </LinearLayout>

        <LinearLayout
            style="@style/LL_Horizontal_wrap">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
