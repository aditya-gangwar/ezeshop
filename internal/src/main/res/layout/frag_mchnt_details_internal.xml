                android:tint="@color/primary"
                android:paddingTop="0dp"
                android:visibility="invisible"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="PIN Limits"
                android:layout_weight="45"
                android:paddingTop="0dp"
                android:gravity="left|center_vertical"/>
            <EditText
                style="@style/Edittext_only_view_small"
                android:layout_weight="55"
                android:gravity="left|center_vertical"
                android:id="@+id/input_pinLimits"
                android:layout_width="0dp"
                android:paddingTop="0dp"
                android:layout_height="match_parent"
                android:text="TBS"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_space"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                style="@style/button_normal_thin"
                android:id="@+id/btn_acc_status"
                android:layout_width="0dp"
                android:text="Disable"
                android:layout_weight="47.5"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"/>

            <android.support.v7.widget.AppCompatButton
                style="@style/button_normal_thin"
                android:id="@+id/btn_launch_app"
                android:layout_width="0dp"
                android:text="Launch App"
                android:layout_weight="47.5"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_space"/>

